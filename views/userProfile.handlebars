<div class="container">
  <div class="row">
    <div class="col">
      <h1>{{username}}'s Poem Corner</h1>
      <button type="button" class="btn btn-light search float-right">Search For Poems</button>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 favorites">
      {{#each favorites}}
        {{>user/favorites-userblock}}
      {{/each}}
    </div>
    <div class="col-sm-6 comments">
      {{#each comments}}
        {{>user/comments-userblock}}
      {{/each}}
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
  $(document).on("click", ".search", function(event){
    event.preventDefault();
    window.location.assign("/search");
  });
  $(document).on("click", ".deleteFav", function(event){
    event.preventDefault();
    $.ajax({
      url: `/api/favorite/${$(this).attr("data-id")}`,
      method: "DELETE",
    }).then(result=>{
      console.log(result);
    }).catch(err=>{
      console.log(err);
    })
  })
});  
</script>
